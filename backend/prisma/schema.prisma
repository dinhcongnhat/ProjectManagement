generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum TaskType {
  ASSIGNED
  PERSONAL
}

enum ProjectStatus {
  IN_PROGRESS
  PENDING_APPROVAL
  COMPLETED
}

enum MessageType {
  TEXT
  VOICE
  FILE
  IMAGE
  TEXT_WITH_FILE
}

enum ConversationType {
  PRIVATE   // Chat 1-1
  GROUP     // Chat nhóm
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  position  String?
  avatar    String?  // Đường dẫn ảnh đại diện trong MinIO
  bio       String?  // Mô tả ngắn về bản thân
  phone     String?  // Số điện thoại
  email     String?  // Email
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdTasks  Task[] @relation("CreatedTasks")
  assignedTasks Task[] @relation("AssignedTasks")

  managedProjects     Project[] @relation("ProjectManager")
  createdProjects     Project[] @relation("ProjectCreator")
  implementedProjects Project[] @relation("ProjectImplementers")
  followedProjects    Project[] @relation("ProjectFollowers")
  
  messages   Message[]         @relation("UserMessages")
  activities ProjectActivity[] @relation("UserActivities")
  
  // Chat system
  conversations     ConversationMember[]
  chatMessages      ChatMessage[]       @relation("ChatMessageSender")
  createdConversations Conversation[]   @relation("ConversationCreator")
}

model Task {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  type        TaskType   @default(ASSIGNED)
  startDate   DateTime?
  endDate     DateTime?
  note        String?    // Ghi chú của người dùng
  lastNoteAt  DateTime?  // Thời gian ghi chú cuối cùng
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  creatorId Int
  creator   User @relation("CreatedTasks", fields: [creatorId], references: [id])

  assigneeId Int?
  assignee   User? @relation("AssignedTasks", fields: [assigneeId], references: [id])
}

model Project {
  id             Int       @id @default(autoincrement())
  code           String    @unique
  name           String
  startDate      DateTime?
  endDate        DateTime?
  duration       String?
  group          String?
  value          String?
  progressMethod String
  description    String?
  attachment     String?
  progress       Float     @default(0)
  status         ProjectStatus @default(IN_PROGRESS)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  managerId Int
  manager   User @relation("ProjectManager", fields: [managerId], references: [id])

  createdById Int?        // Admin đã tạo dự án
  createdBy   User? @relation("ProjectCreator", fields: [createdById], references: [id])

  // Parent-Child relationship
  parentId  Int?
  parent    Project?  @relation("SubProjects", fields: [parentId], references: [id])
  children  Project[] @relation("SubProjects")

  implementers User[] @relation("ProjectImplementers")
  followers    User[] @relation("ProjectFollowers")
  
  messages   Message[]
  activities ProjectActivity[]
}

model Message {
  id          Int         @id @default(autoincrement())
  content     String?     // Text content (null for voice/file-only messages)
  messageType MessageType @default(TEXT)
  attachment  String?     // File path in MinIO (audio or other files)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  projectId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  senderId Int
  sender   User @relation("UserMessages", fields: [senderId], references: [id])
}

model ProjectActivity {
  id        Int      @id @default(autoincrement())
  action    String   // e.g., "Updated progress to 75%", "Changed status to PENDING_APPROVAL"
  fieldName String?  // Field that was changed
  oldValue  String?  // Previous value
  newValue  String?  // New value
  createdAt DateTime @default(now())

  projectId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation("UserActivities", fields: [userId], references: [id])
}

// ==================== CHAT SYSTEM ====================

model Conversation {
  id          Int              @id @default(autoincrement())
  name        String?          // Tên nhóm chat (null cho chat 1-1)
  type        ConversationType @default(PRIVATE)
  avatar      String?          // Ảnh đại diện nhóm
  description String?          // Mô tả nhóm
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  createdById Int
  createdBy   User @relation("ConversationCreator", fields: [createdById], references: [id])

  members  ConversationMember[]
  messages ChatMessage[]
}

model ConversationMember {
  id        Int      @id @default(autoincrement())
  joinedAt  DateTime @default(now())
  isAdmin   Boolean  @default(false)  // Admin của nhóm chat
  lastRead  DateTime @default(now())  // Thời điểm đọc tin nhắn cuối

  conversationId Int
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
}

model ChatMessage {
  id          Int         @id @default(autoincrement())
  content     String?     // Nội dung text
  messageType MessageType @default(TEXT)
  attachment  String?     // File path trong MinIO
  isRead      Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  conversationId Int
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  senderId Int
  sender   User @relation("ChatMessageSender", fields: [senderId], references: [id])
}
