generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum TaskType {
  ASSIGNED
  PERSONAL
}

enum ProjectStatus {
  IN_PROGRESS
  PENDING_APPROVAL
  COMPLETED
}

enum MessageType {
  TEXT
  VOICE
  FILE
  IMAGE
  TEXT_WITH_FILE
}

enum ConversationType {
  PRIVATE   // Chat 1-1
  GROUP     // Chat nh√≥m
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  position  String?
  avatar    String?  // ƒê∆∞·ªùng d·∫´n ·∫£nh ƒë·∫°i di·ªán trong MinIO
  bio       String?  // M√¥ t·∫£ ng·∫Øn v·ªÅ b·∫£n th√¢n
  phone     String?  // S·ªë ƒëi·ªán tho·∫°i
  email     String?  // Email
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdTasks  Task[] @relation("CreatedTasks")
  assignedTasks Task[] @relation("AssignedTasks")

  managedProjects     Project[] @relation("ProjectManager")
  createdProjects     Project[] @relation("ProjectCreator")
  implementedProjects Project[] @relation("ProjectImplementers")
  followedProjects    Project[] @relation("ProjectFollowers")
  
  messages   Message[]         @relation("UserMessages")
  activities ProjectActivity[] @relation("UserActivities")
  
  // Chat system
  conversations     ConversationMember[]
  chatMessages      ChatMessage[]       @relation("ChatMessageSender")
  createdConversations Conversation[]   @relation("ConversationCreator")
  chatReactions     ChatMessageReaction[] @relation("UserReactions")
  
  // Push notifications
  pushSubscriptions    PushSubscription[]
  notificationSettings NotificationSettings?
}

model Task {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  type        TaskType   @default(ASSIGNED)
  startDate   DateTime?
  endDate     DateTime?
  note        String?    // Ghi ch√∫ c·ªßa ng∆∞·ªùi d√πng
  lastNoteAt  DateTime?  // Th·ªùi gian ghi ch√∫ cu·ªëi c√πng
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  creatorId Int
  creator   User @relation("CreatedTasks", fields: [creatorId], references: [id])

  assigneeId Int?
  assignee   User? @relation("AssignedTasks", fields: [assigneeId], references: [id])
}

model Project {
  id             Int       @id @default(autoincrement())
  code           String    @unique
  name           String
  startDate      DateTime?
  endDate        DateTime?
  duration       String?
  group          String?
  value          String?
  progressMethod String
  description    String?
  attachment     String?
  progress       Float     @default(0)
  status         ProjectStatus @default(IN_PROGRESS)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  managerId Int
  manager   User @relation("ProjectManager", fields: [managerId], references: [id])

  createdById Int?        // Admin ƒë√£ t·∫°o d·ª± √°n
  createdBy   User? @relation("ProjectCreator", fields: [createdById], references: [id])

  // Parent-Child relationship
  parentId  Int?
  parent    Project?  @relation("SubProjects", fields: [parentId], references: [id])
  children  Project[] @relation("SubProjects")

  implementers User[] @relation("ProjectImplementers")
  followers    User[] @relation("ProjectFollowers")
  
  messages   Message[]
  activities ProjectActivity[]
}

model Message {
  id          Int         @id @default(autoincrement())
  content     String?     // Text content (null for voice/file-only messages)
  messageType MessageType @default(TEXT)
  attachment  String?     // File path in MinIO (audio or other files)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  projectId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  senderId Int
  sender   User @relation("UserMessages", fields: [senderId], references: [id])
}

model ProjectActivity {
  id        Int      @id @default(autoincrement())
  action    String   // e.g., "Updated progress to 75%", "Changed status to PENDING_APPROVAL"
  fieldName String?  // Field that was changed
  oldValue  String?  // Previous value
  newValue  String?  // New value
  createdAt DateTime @default(now())

  projectId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation("UserActivities", fields: [userId], references: [id])
}

// ==================== CHAT SYSTEM ====================

model Conversation {
  id          Int              @id @default(autoincrement())
  name        String?          // T√™n nh√≥m chat (null cho chat 1-1)
  type        ConversationType @default(PRIVATE)
  avatar      String?          // ·∫¢nh ƒë·∫°i di·ªán nh√≥m
  description String?          // M√¥ t·∫£ nh√≥m
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  createdById Int
  createdBy   User @relation("ConversationCreator", fields: [createdById], references: [id])

  members  ConversationMember[]
  messages ChatMessage[]
}

model ConversationMember {
  id        Int      @id @default(autoincrement())
  joinedAt  DateTime @default(now())
  isAdmin   Boolean  @default(false)  // Admin c·ªßa nh√≥m chat
  lastRead  DateTime @default(now())  // Th·ªùi ƒëi·ªÉm ƒë·ªçc tin nh·∫Øn cu·ªëi

  conversationId Int
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
  @@index([userId])
}

model ChatMessage {
  id          Int         @id @default(autoincrement())
  content     String?     // N·ªôi dung text
  messageType MessageType @default(TEXT)
  attachment  String?     // File path trong MinIO
  isRead      Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  conversationId Int
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  senderId Int
  sender   User @relation("ChatMessageSender", fields: [senderId], references: [id])
  
  reactions ChatMessageReaction[]
  
  @@index([conversationId, createdAt(sort: Desc)])
  @@index([senderId])
}

// Reaction tr√™n tin nh·∫Øn chat
model ChatMessageReaction {
  id        Int      @id @default(autoincrement())
  emoji     String   // Emoji: üëç ‚ù§Ô∏è üòÇ üòÆ üò¢ üò°
  createdAt DateTime @default(now())

  messageId Int
  message   ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation("UserReactions", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId, emoji])
}

// ==================== PUSH NOTIFICATIONS ====================

model PushSubscription {
  id        Int      @id @default(autoincrement())
  endpoint  String   @unique
  p256dh    String   // Public key
  auth      String   // Auth secret
  userAgent String?  // Browser/device info
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Notification preferences per user
model NotificationSettings {
  id                    Int      @id @default(autoincrement())
  chatMessages          Boolean  @default(true)
  projectAssignments    Boolean  @default(true)
  projectDiscussions    Boolean  @default(true)
  projectUpdates        Boolean  @default(true)
  taskAssignments       Boolean  @default(true)
  mentions              Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
