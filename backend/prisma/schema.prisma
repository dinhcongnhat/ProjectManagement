generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum TaskType {
  ASSIGNED
  PERSONAL
}

enum ProjectStatus {
  IN_PROGRESS
  PENDING_APPROVAL
  COMPLETED
}

// Workflow status cho tracking 4 tr·∫°ng th√°i c√¥ng vi·ªác
enum WorkflowStatus {
  RECEIVED          // ƒê√£ nh·∫≠n th√¥ng tin
  IN_PROGRESS       // ƒêang th·ª±c hi·ªán
  COMPLETED         // ƒê√£ ho√†n th√†nh
  SENT_TO_CUSTOMER  // ƒê√£ g·ª≠i kh√°ch h√†ng
}

enum MessageType {
  TEXT
  VOICE
  FILE
  IMAGE
  TEXT_WITH_FILE
}

enum ConversationType {
  PRIVATE   // Chat 1-1
  GROUP     // Chat nh√≥m
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  position  String?
  avatar    String?  // ƒê∆∞·ªùng d·∫´n ·∫£nh ƒë·∫°i di·ªán trong MinIO
  bio       String?  // M√¥ t·∫£ ng·∫Øn v·ªÅ b·∫£n th√¢n
  phone     String?  // S·ªë ƒëi·ªán tho·∫°i
  email     String?  // Email
  lastActive DateTime @default(now()) // Th·ªùi gian ho·∫°t ƒë·ªông cu·ªëi
  isOnline   Boolean  @default(false)  // Tr·∫°ng th√°i online
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdTasks  Task[] @relation("CreatedTasks")
  assignedTasks Task[] @relation("AssignedTasks")

  managedProjects     Project[] @relation("ProjectManager")
  createdProjects     Project[] @relation("ProjectCreator")
  implementedProjects Project[] @relation("ProjectImplementers")
  followedProjects    Project[] @relation("ProjectFollowers")
  cooperatedProjects  Project[] @relation("ProjectCooperators")  // Ph·ªëi h·ª£p th·ª±c hi·ªán
  
  messages   Message[]         @relation("UserMessages")
  activities ProjectActivity[] @relation("UserActivities")
  
  // Workflow approvals
  approvedWorkflows ProjectWorkflow[] @relation("WorkflowApprover")
  
  // Chat system
  conversations     ConversationMember[]
  chatMessages      ChatMessage[]       @relation("ChatMessageSender")
  createdConversations Conversation[]   @relation("ConversationCreator")
  chatReactions     ChatMessageReaction[] @relation("UserReactions")
  
  // Push notifications
  pushSubscriptions    PushSubscription[]
  notificationSettings NotificationSettings?
  
  // Personal folders
  userFolders UserFolder[] @relation("UserFolders")
  userFiles   UserFile[]   @relation("UserFiles")
  
  // Project attachments uploaded by this user
  uploadedAttachments ProjectAttachment[] @relation("UploadedAttachments")
  
  // Notifications
  notifications Notification[] @relation("UserNotifications")
}

model Task {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  type        TaskType   @default(ASSIGNED)
  startDate   DateTime?
  endDate     DateTime?
  note        String?    // Ghi ch√∫ c·ªßa ng∆∞·ªùi d√πng
  lastNoteAt  DateTime?  // Th·ªùi gian ghi ch√∫ cu·ªëi c√πng
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  creatorId Int
  creator   User @relation("CreatedTasks", fields: [creatorId], references: [id])

  assigneeId Int?
  assignee   User? @relation("AssignedTasks", fields: [assigneeId], references: [id])
}

model Project {
  id             Int       @id @default(autoincrement())
  code           String    @unique
  name           String
  investor       String?   // Ch·ªß ƒë·∫ßu t∆∞
  startDate      DateTime?
  endDate        DateTime?
  duration       String?
  group          String?
  value          String?
  progressMethod String?
  description    String?
  attachment     String?
  progress       Float     @default(0)
  status         ProjectStatus @default(IN_PROGRESS)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  managerId Int
  manager   User @relation("ProjectManager", fields: [managerId], references: [id])

  createdById Int?        // Admin ƒë√£ t·∫°o d·ª± √°n
  createdBy   User? @relation("ProjectCreator", fields: [createdById], references: [id])

  // Parent-Child relationship
  parentId  Int?
  parent    Project?  @relation("SubProjects", fields: [parentId], references: [id])
  children  Project[] @relation("SubProjects")

  implementers User[] @relation("ProjectImplementers")
  followers    User[] @relation("ProjectFollowers")
  cooperators  User[] @relation("ProjectCooperators")  // Ph·ªëi h·ª£p th·ª±c hi·ªán
  
  messages     Message[]
  activities   ProjectActivity[]
  attachments  ProjectAttachment[]  // Multiple attachments support
  workflow     ProjectWorkflow?     // Workflow tracking
  notifications Notification[]      // Related notifications
}

// Project Attachments - Multiple files per project
// Admin uploads go to: DuAn/{TenDuAn}/TaiLieuDinhKem/
// Employee uploads go to: DuAn/{TenDuAn}/NhanVienDinhKem/
model ProjectAttachment {
  id          Int      @id @default(autoincrement())
  name        String   // Original filename
  minioPath   String   // Full path in MinIO
  fileType    String   // MIME type
  fileSize    Int      // Size in bytes
  category    String   // "TaiLieuDinhKem" (admin) or "NhanVienDinhKem" (employee)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  projectId   Int
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  uploadedById Int
  uploadedBy   User @relation("UploadedAttachments", fields: [uploadedById], references: [id])

  @@index([projectId])
  @@index([uploadedById])
}

model Message {
  id          Int         @id @default(autoincrement())
  content     String?     // Text content (null for voice/file-only messages)
  messageType MessageType @default(TEXT)
  attachment  String?     // File path in MinIO (audio or other files)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  projectId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  senderId Int
  sender   User @relation("UserMessages", fields: [senderId], references: [id])
}

model ProjectActivity {
  id        Int      @id @default(autoincrement())
  action    String   // e.g., "Updated progress to 75%", "Changed status to PENDING_APPROVAL"
  fieldName String?  // Field that was changed
  oldValue  String?  // Previous value
  newValue  String?  // New value
  createdAt DateTime @default(now())

  projectId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation("UserActivities", fields: [userId], references: [id])
}

// ==================== CHAT SYSTEM ====================

model Conversation {
  id          Int              @id @default(autoincrement())
  name        String?          // T√™n nh√≥m chat (null cho chat 1-1)
  type        ConversationType @default(PRIVATE)
  avatar      String?          // ·∫¢nh ƒë·∫°i di·ªán nh√≥m
  description String?          // M√¥ t·∫£ nh√≥m
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  createdById Int
  createdBy   User @relation("ConversationCreator", fields: [createdById], references: [id])

  members  ConversationMember[]
  messages ChatMessage[]
}

model ConversationMember {
  id        Int      @id @default(autoincrement())
  joinedAt  DateTime @default(now())
  isAdmin   Boolean  @default(false)  // Admin c·ªßa nh√≥m chat
  lastRead  DateTime @default(now())  // Th·ªùi ƒëi·ªÉm ƒë·ªçc tin nh·∫Øn cu·ªëi

  conversationId Int
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
  @@index([userId])
}

model ChatMessage {
  id          Int         @id @default(autoincrement())
  content     String?     // N·ªôi dung text
  messageType MessageType @default(TEXT)
  attachment  String?     // File path trong MinIO
  isRead      Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  conversationId Int
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  senderId Int
  sender   User @relation("ChatMessageSender", fields: [senderId], references: [id])
  
  reactions ChatMessageReaction[]
  
  @@index([conversationId, createdAt(sort: Desc)])
  @@index([senderId])
}

// Reaction tr√™n tin nh·∫Øn chat
model ChatMessageReaction {
  id        Int      @id @default(autoincrement())
  emoji     String   // Emoji: üëç ‚ù§Ô∏è üòÇ üòÆ üò¢ üò°
  createdAt DateTime @default(now())

  messageId Int
  message   ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation("UserReactions", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId, emoji])
}

// ==================== PUSH NOTIFICATIONS ====================

model PushSubscription {
  id        Int      @id @default(autoincrement())
  endpoint  String   @unique
  p256dh    String   // Public key
  auth      String   // Auth secret
  userAgent String?  // Browser/device info
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Notification preferences per user
model NotificationSettings {
  id                    Int      @id @default(autoincrement())
  chatMessages          Boolean  @default(true)
  projectAssignments    Boolean  @default(true)
  projectDiscussions    Boolean  @default(true)
  projectUpdates        Boolean  @default(true)
  taskAssignments       Boolean  @default(true)
  mentions              Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ==================== USER PERSONAL FOLDERS ====================

model UserFolder {
  id          Int      @id @default(autoincrement())
  name        String   // T√™n th∆∞ m·ª•c
  minioPath   String   // ƒê∆∞·ªùng d·∫´n trong MinIO (e.g., "users/nhatdc/Documents")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // User s·ªü h·ªØu th∆∞ m·ª•c
  userId Int
  user   User @relation("UserFolders", fields: [userId], references: [id], onDelete: Cascade)

  // Nested folders - parent/child relationship
  parentId Int?
  parent   UserFolder?  @relation("SubFolders", fields: [parentId], references: [id], onDelete: Cascade)
  children UserFolder[] @relation("SubFolders")

  // Files trong th∆∞ m·ª•c n√†y
  files UserFile[]

  @@unique([userId, parentId, name]) // T√™n th∆∞ m·ª•c unique trong c√πng parent
  @@index([userId])
  @@index([parentId])
}

model UserFile {
  id          Int      @id @default(autoincrement())
  name        String   // T√™n file g·ªëc
  minioPath   String   // ƒê∆∞·ªùng d·∫´n trong MinIO
  fileType    String   // MIME type
  fileSize    Int      // K√≠ch th∆∞·ªõc file (bytes)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // User s·ªü h·ªØu file
  userId Int
  user   User @relation("UserFiles", fields: [userId], references: [id], onDelete: Cascade)

  // Th∆∞ m·ª•c ch·ª©a file (null = root folder)
  folderId Int?
  folder   UserFolder? @relation(fields: [folderId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([folderId])
}

// ==================== PROJECT WORKFLOW ====================
// Track 4 tr·∫°ng th√°i c√¥ng vi·ªác v·ªõi ng√†y th√°ng chi ti·∫øt
model ProjectWorkflow {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projectId Int     @unique
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Tr·∫°ng th√°i hi·ªán t·∫°i
  currentStatus WorkflowStatus @default(RECEIVED)

  // 1. ƒê√£ nh·∫≠n th√¥ng tin
  receivedStartAt     DateTime?  // Ng√†y b·∫Øt ƒë·∫ßu = ng√†y t·∫°o project
  receivedConfirmedAt DateTime?  // Ng√†y k·∫øt th√∫c = khi ·∫•n x√°c nh·∫≠n

  // 2. ƒêang th·ª±c hi·ªán
  inProgressStartAt     DateTime?  // = receivedConfirmedAt
  inProgressConfirmedAt DateTime?  // = khi ·∫•n x√°c nh·∫≠n

  // 3. ƒê√£ ho√†n th√†nh
  completedStartAt     DateTime?  // = inProgressConfirmedAt
  completedConfirmedAt DateTime?  // = khi ·∫•n x√°c nh·∫≠n (c·∫ßn PM approve)
  completedApprovedById Int?      // PM ƒë√£ approve
  completedApprovedBy   User?     @relation("WorkflowApprover", fields: [completedApprovedById], references: [id])
  completedApprovedAt  DateTime?  // Th·ªùi gian PM approve

  // 4. ƒê√£ g·ª≠i kh√°ch h√†ng
  sentToCustomerAt DateTime?  // = khi ·∫•n x√°c nh·∫≠n

  @@index([projectId])
}

// ==================== USER NOTIFICATIONS ====================
// L∆∞u tr·ªØ th√¥ng b√°o cho users
model Notification {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  
  // Lo·∫°i th√¥ng b√°o
  type      String   // PROJECT_ASSIGNED, TASK_ASSIGNED, PROJECT_UPDATED, MESSAGE, etc.
  
  // N·ªôi dung
  title     String   // Ti√™u ƒë·ªÅ th√¥ng b√°o
  message   String   // N·ªôi dung chi ti·∫øt
  
  // Link ƒë·∫øn resource (optional)
  projectId Int?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  taskId    Int?
  
  // User nh·∫≠n th√¥ng b√°o
  userId    Int
  user      User     @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)
  
  // Tr·∫°ng th√°i
  isRead    Boolean  @default(false)
  readAt    DateTime?
  
  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
}
